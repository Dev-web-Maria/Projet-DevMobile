        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseDepart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseArrivee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
